<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvukmrow"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/ivUKMrow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pencak_silat2"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/title"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tvUKM1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENCAK SILAT UDAYANA"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvUKM2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="akashdad akdhakdha asdhiadkh a asdjhajdha dk ajkshdkas da kjahsdkah d ajgsdjahd aushdajhd hasdkha d"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

    </FrameLayout>


</androidx.cardview.widget.CardView>