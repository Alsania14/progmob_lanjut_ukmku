<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llAnggotaRow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama :"
            android:textSize="8sp"
            android:layout_marginBottom="3dp"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/cvAnggotaRowNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="I Putu Alin Winata Gotama"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM :"
            android:textSize="8sp"
            android:layout_marginBottom="3dp"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/cvAnggotaRowNIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1805551029"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor HP :"
            android:textSize="8sp"
            android:layout_marginBottom="3dp"
            tools:ignore="HardcodedText,SmallSp" />

        <TextView
            android:id="@+id/cvAnggotaRowNomorHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="071928438"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnAnggotaEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDIT"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnAnggotaDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DELETE"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>