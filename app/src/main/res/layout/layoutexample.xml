<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvExample1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="20dp"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:minHeight="80dp"-->
<!--                android:layout_weight="0.1"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/strip3"/>-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="22sp"
                android:drawableLeft="@drawable/strip3"
                android:hint="cari masalah"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@id/cvExample1"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEMUA UKM"
        android:drawableRight="@drawable/strip3"
        tools:ignore="HardcodedText,RtlHardcoded,UseCompatTextViewDrawableXml" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginBottom="-30dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="IKATAN UKM UDAYANA"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>